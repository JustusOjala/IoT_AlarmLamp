    "version": "0.2.0",
    "configurations": [

        {
            "name": "ESP-IDF Debug: Launch",
            "type": "espidf",
            "request": "launch",
            "debugPort": 43474,
            "logLevel": 2,
            "mode": "auto",
            "verifyAppBinBeforeDebug": false,
            "tmoScaleFactor": 1,
            "initGdbCommands": [
                "target remote :3333",
                "symbol-file /build/lamp.elf",
                "mon reset halt",
                "flushregs",
                "thb app_main"
            ]
        }
    ]
}